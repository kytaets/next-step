{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "globalSetup": "<rootDir>/../test/setup.ts",
  "globalTeardown": "<rootDir>/../test/teardown.ts",
  "moduleNameMapper": {
    "^@common/(.*)$": "<rootDir>/../src/common/$1",
    "^@/(.*)$": "<rootDir>/../src/$1"
  },
  "coverageProvider": "v8"
}
